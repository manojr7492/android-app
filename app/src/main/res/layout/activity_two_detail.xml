<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0d7ca"
    android:orientation="vertical"
    tools:context=".ActivityTwoDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">


        <RelativeLayout
            android:id="@+id/recyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="#0659f4"
                android:minHeight="?attr/actionBarSize">


                <Button
                    android:id="@+id/needhelp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="15dp"
                    android:text="Need Help?"
                    android:textColor="#f40909"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texthead"
                    android:layout_width="195dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:text="Next"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="20dp" />


            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="120dp"

                android:layout_below="@+id/toolbar">

                <LinearLayout
                    android:id="@+id/sectopbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/view_detail"
                        android:layout_width="180sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:text="View Details" />

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="180sp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0dp"
                        android:text="Cancel" />

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:background="#ffffff"
                   android:layout_height="50dp">

                   <TextView
                       android:layout_width="150dp"
                       android:text="Order Id :"
                       android:textAlignment="viewEnd"
                       android:layout_marginTop="13dp"
                       android:textSize="18sp"
                       android:textStyle="bold"
                       android:textColor="#000000"
                       android:layout_height="match_parent" />
                   <TextView
                       android:layout_width="200dp"
                       android:id="@+id/order_idaa"
                       android:textSize="18sp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="13dp"
                       android:layout_height="match_parent" />

               </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:id="@+id/lll"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="179dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/wwwwwhat"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Get updates on WhatsApp"
            android:textAlignment="center"
            android:textSize="18dp" />
        <Switch
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lll"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_height="241dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:background="#ffffff"
           android:layout_height="120dp">

           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="50dp"
               android:src="@drawable/check"
               />

           <TextView
               android:id="@+id/status"
               android:layout_width="match_parent"
               android:layout_height="40sp"
               android:layout_marginTop="50sp"
               android:layout_marginLeft="10sp"
               android:textSize="15sp"
               android:text="Booking Accepted" />

       </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="300sp"
                android:layout_height="100sp"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:id="@+id/timestatus"
                android:textSize="18sp"
                android:text="Your home cleaner will be assigned 1 hour before the Scheduled time"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:background="#0659f4"
        android:text="Feedback"
        android:id="@+id/btn_feedback"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
